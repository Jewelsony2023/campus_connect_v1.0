generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  name          String
  password      String?
  role          String       @default("STUDENT")
  createdAt     DateTime     @default(now())
  forumPosts    ForumPost[]
  forumReplies  ForumReply[]
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  start       DateTime
  end         DateTime
  location    String
  approved    Boolean  @default(false)
  createdById String
}

model ForumPost {
  id        String       @id @default(cuid())
  title     String
  body      String
  pinned    Boolean      @default(false)
  createdAt DateTime     @default(now())
  userId    String
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  replies   ForumReply[]
}

model ForumReply {
  id        String    @id @default(cuid())
  body      String
  createdAt DateTime  @default(now())
  postId    String
  userId    String
  post      ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model Gallery {
  id        String   @id @default(cuid())
  url       String
  uploadedById String
  createdAt DateTime @default(now())
}